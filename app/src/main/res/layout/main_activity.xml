<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="#f8f8f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:layout_width="match_parent"
        android:id="@+id/bottom_navigation"
        app:bnc_mode="spread"
        android:padding="8dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_icon="@drawable/home"
            app:bt_title="@string/home"
            app:bt_padding="8dp"
            app:bt_titlePadding="8dp" />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/menu_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_icon="@drawable/delivery"
            app:bt_title="@string/delivery"
            app:bt_padding="8dp"
            app:bt_titlePadding="8dp" />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/menu_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_icon="@drawable/wallet"
            app:bt_title="@string/wallet"
            app:bt_padding="8dp"
            app:bt_titlePadding="8dp" />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/menu_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_icon="@drawable/notification"
            app:bt_title="@string/alert"
            app:bt_padding="8dp"
            app:bt_titlePadding="8dp" />
    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
</androidx.constraintlayout.widget.ConstraintLayout>